<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".StudentSearch"
    android:orientation="vertical"
    android:background="@color/black">

    <TextView
        android:id="@+id/title_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search for a course"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        android:fontFamily="@font/anaheim"/>

    <EditText
        android:id="@+id/authoret"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_textview"
        android:layout_marginTop="16dp"
        android:hint="Search by Author"
        android:minHeight="48dp"
        android:background="@drawable/add_quiz_bg"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:paddingLeft="23dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:fontFamily="@font/anaheim"
        android:textSize="21dp"/>
    <Button
        android:id="@+id/search_auth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/categoryet"
        android:layout_marginTop="16dp"
        android:text="Search"
        android:background="@drawable/button_bg"
        android:fontFamily="@font/anaheim"
        android:textStyle="bold"
        android:textSize="23sp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"/>

    <EditText
        android:id="@+id/courseet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/authoret"
        android:layout_marginTop="16dp"
        android:hint="Search by Course Title"
        android:minHeight="48dp"
        android:background="@drawable/add_quiz_bg"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:paddingLeft="23dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:fontFamily="@font/anaheim"
        android:textSize="21dp"
        />
    <Button
        android:id="@+id/search_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/categoryet"
        android:layout_marginTop="16dp"
        android:text="Search"
        android:background="@drawable/button_bg"
        android:fontFamily="@font/anaheim"
        android:textStyle="bold"
        android:textSize="23sp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        />

    <EditText
        android:id="@+id/categoryet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/courseet"
        android:layout_marginTop="16dp"
        android:hint="Search by Category"
        android:minHeight="48dp"
        android:background="@drawable/add_quiz_bg"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:paddingLeft="23dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:fontFamily="@font/anaheim"
        android:textSize="21dp"/>


    <Button
        android:id="@+id/search_cat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/categoryet"
        android:layout_marginTop="16dp"
        android:text="Search"
        android:background="@drawable/button_bg"
        android:fontFamily="@font/anaheim"
        android:textStyle="bold"
        android:textSize="23sp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"/>

</LinearLayout>
